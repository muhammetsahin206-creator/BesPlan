import React, { useState } from "react";
import { View, Text, TouchableOpacity, StyleSheet, SafeAreaView } from "react-native";

export default function App() {
  const [screen, setScreen] = useState("home");

  if (screen === "besplan") {
    return (
      <SafeAreaView style={styles.container}>
        <Text style={styles.title}>BesPlan (Test)</Text>
        <Text style={styles.text}>Buraya BesPlan ekranlarını ekleyeceğiz.</Text>
        <TouchableOpacity style={styles.btn} onPress={() => setScreen("home")}>
          <Text style={styles.btnText}>← Geri</Text>
        </TouchableOpacity>
      </SafeAreaView>
    );
  }

  if (screen === "solarTenis") {
    return (
      <SafeAreaView style={styles.container}>
        <Text style={styles.title}>SolarTenis (Test)</Text>
        <Text style={styles.text}>Buraya SolarTenis ekranlarını ekleyeceğiz.</Text>
        <TouchableOpacity style={styles.btn} onPress={() => setScreen("home")}>
          <Text style={styles.btnText}>← Geri</Text>
        </TouchableOpacity>
      </SafeAreaView>
    );
  }

  // ANA MENÜ (home)
  return (
    <SafeAreaView style={styles.container}>
      <Text style={styles.title}>Hoş geldin 👋</Text>
      <TouchableOpacity style={styles.btn} onPress={() => setScreen("besplan")}>
        <Text style={styles.btnText}>BesPlan’ı Aç</Text>
      </TouchableOpacity>
      <TouchableOpacity style={styles.btn} onPress={() => setScreen("solarTenis")}>
        <Text style={styles.btnText}>SolarTenis’i Aç</Text>
      </TouchableOpacity>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1, justifyContent: "center", alignItems: "center", padding: 20 },
  title: { fontSize: 22, fontWeight: "700", marginBottom: 20 },
  text: { fontSize: 16, marginBottom: 20 },
  btn: {
    backgroundColor: "#2e86de",
    padding: 12,
    borderRadius: 8,
    marginVertical: 6,
    width: "70%",
    alignItems: "center",
  },
  btnText: { color: "#fff", fontSize: 16, fontWeight: "600" },
});
