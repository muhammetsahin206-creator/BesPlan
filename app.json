import React, { useState } from "react";
import { View, Text, TouchableOpacity, SafeAreaView, StyleSheet } from "react-native";

export default function App() {
  const [screen, setScreen] = useState("home");

  if (screen === "besplan") {
    return (
      <SafeAreaView style={styles.container}>
        <Text style={styles.title}>📘 BesPlan</Text>
        <Text style={styles.text}>Buraya BesPlan ekranlarını ekleyeceğiz.</Text>
        <TouchableOpacity style={styles.button} onPress={() => setScreen("home")}>
          <Text style={styles.btnText}>← Geri</Text>
        </TouchableOpacity>
      </SafeAreaView>
    );
  }

  if (screen === "solarTenis") {
    return (
      <SafeAreaView style={styles.container}>
        <Text style={styles.title}>🎾 SolarTenis</Text>
        <Text style={styles.text}>Buraya SolarTenis ekranlarını ekleyeceğiz.</Text>
        <TouchableOpacity style={styles.button} onPress={() => setScreen("home")}>
          <Text style={styles.btnText}>← Geri</Text>
        </TouchableOpacity>
      </SafeAreaView>
    );
  }

  // Ana Menü
  return (
    <SafeAreaView style={styles.container}>
      <Text style={styles.title}>Hoş geldin 👋</Text>
      <TouchableOpacity style={styles.button} onPress={() => setScreen("besplan")}>
        <Text style={styles.btnText}>BesPlan’ı Aç</Text>
      </TouchableOpacity>
      <TouchableOpacity style={styles.button} onPress={() => setScreen("solarTenis")}>
        <Text style={styles.btnText}>SolarTenis’i Aç</Text>
      </TouchableOpacity>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1, justifyContent: "center", alignItems: "center", backgroundColor: "#f2f2f2" },
  title: { fontSize: 24, fontWeight: "bold", marginBottom: 20 },
  text: { fontSize: 16, marginBottom: 20 },
  button: { backgroundColor: "#007AFF", padding: 15, borderRadius: 8, marginVertical: 10 },
  btnText: { color: "#fff", fontSize: 16, fontWeight: "bold" }
});
